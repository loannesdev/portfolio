---
import { sections } from "@/utils/const";

const { name } = sections.find((elm) => elm.name === "home");
---

<section id={name}>
  <h2 class="aux-title">Soy<br />Sebastian Cortes,</h2>
  <h1 class="main-title">Programador web front-end</h1>
</section>

<style>
  section[id] {
    display: grid;
    align-content: center;
    height: 100dvh;

    & .aux-title {
      font-size: clamp(1.2rem, 3vw, 2rem);
    }

    & .main-title {
      font-size: clamp(2rem, 5vw, 5rem);
      font-family: var(--font-title);
      font-weight: 900;
      color: var(--current-neon-theme);
      text-shadow: 0px 0px 64px
        color-mix(in srgb, transparent 20%, var(--current-neon-theme));
      -webkit-text-stroke: 2px currentColor;
      animation: fade 6s infinite ease alternate;
      text-wrap: unset;
    }
  }

  @keyframes fade {
    25% {
      text-shadow: 0px 0px 24px currentColor;
    }
    75% {
      text-shadow: 0px 0px 64px currentColor;
    }
  }
</style>
