---
import { sections } from "../utils/const";

const {
  home: { name },
} = sections;
---

<section id={name}>
  <h2 class="title-one">Soy<br />Sebastian Cortes,</h2>
  <h1 class="title-two">Programador web front-end</h1>
</section>

<style>
  section[id] {
    display: grid;
    align-content: center;
    height: 80dvh;

    & .title-one {
      font-size: clamp(1.2rem, 3vw, 2rem);
    }

    & .title-two {
      font-size: clamp(2rem, 5vw, 3.75rem);
      font-family: var(--font-family-title);
      font-weight: extrabold;
      color: var(--current-neon-theme);
      text-shadow: 0px 0px 48px currentColor;
      -webkit-text-stroke: 2px currentColor;
      animation: fade 10s infinite ease;

      :is([theme="dark"]) & {
        text-shadow: 0px 0px 32px #22ee58f4;
      }
    }
  }

  @keyframes fade {
    25% {
      text-shadow: 0px 0px 24px currentColor;
    }
    75% {
      text-shadow: 0px 0px 48px currentColor;
    }
  }
</style>
