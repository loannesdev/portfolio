---
import About from "../components/About.svelte";
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import Knowledge from "../components/Knowledge.svelte";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <Header />

  <main>
    <Home />
    <About client:only="svelte" />
    <Knowledge client:only="svelte" />
    <Projects />
  </main>
</Layout>

<style>
  :root {
    --palette-black: #202124;
    --palette-white: #fafafa;
    --palette-grey: #6565652e;
    --font-family-text: "Space Grotesk";
    --font-family-title: "Nunito Sans";
    --transition-one-milisecond: 0.1s all ease;
    --transition-two-milisecond: 0.2s all ease;
    --transition-half-second: 0.5s all ease;
    --border-radius-min: 0.25rem;
    --border-radius-med: 0.375rem;
    --border-radius-max: 2rem;
  }

  * {
    font-family: "Space Grotesk", system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
      "Helvetica Neue", sans-serif;
  }

  body {
    display: grid;
    transition: var(--transition-one-milisecond);
    background-color: var(--palette-white);
    color: var(--palette-black);
    padding: 5rem 1rem;

    :is(.dark) & {
      background-color: var(--palette-black);
      color: var(--palette-white);
    }
  }

  main {
    max-width: 80ch;
    justify-self: center;
    width: 100%;
  }

  main {
    display: grid;
    gap: 10rem;
  }
</style>

<script is:inline>
// Dark mode
const theme = (() => {
  const darkModeValue = localStorage.getItem("theme");

  if (darkModeValue) {
    document.documentElement.setAttribute(
      "class",
      darkModeValue === "light" ? "light" : "dark"
    );
    return localStorage.getItem("theme");
  }
  return "light";
})();

localStorage.setItem("theme", theme);
</script>
