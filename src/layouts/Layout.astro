---
import { urlDomain } from "./../utils/const";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portafolio • Sebastian Cortes" />
    <title>&bull; Sebastian Cortes &bull;</title>
    <link rel="icon" type="image/svg+xml" href="/man-technologist.svg" />

    <link
      rel="preload"
      href="/fonts/space_grotesk/SpaceGrotesk-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/nunito_sans/NunitoSans10pt-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/nunito_sans/NunitoSans10pt-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/nunito_sans/NunitoSans10pt-Black.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <link rel="canonical" href=`${urlDomain}` />
    <meta property="og:url" content=`${urlDomain}` />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Sebastian Cortes • Desarrollador web front-end"
    />
    <meta property="og:description" content="Portafolio" />
    <meta property="og:image" content=`${urlDomain}/OG-image.webp` />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content=`${urlDomain}` />
    <meta
      name="twitter:title"
      content="Sebastian Cortes • Desarrollador web front-end"
    />
    <meta name="twitter:description" content="Portafolio" />
    <meta name="twitter:image" content=`${urlDomain}/OG-image.webp` />
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    scroll-behavior: smooth;
  }

  section[id] > .section-title {
    font-size: 2rem;
    font-weight: bold;
    font-family: var(--font-family-title);
  }

  body {
    display: grid;
    transition: var(--transition-one-milisecond);
    background: var(--palette-white);
    color: var(--palette-black);
    padding: 5rem 1rem;

    :is([theme="dark"]) & {
      background: var(--palette-black);
      color: var(--palette-white);
    }
  }
</style>

<script>
  import { darkMode, scrollMarginTopChecker } from "../utils/scripts";

  scrollMarginTopChecker();
  darkMode();
</script>
